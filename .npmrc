# Отключаем использование нативных модулей Rollup
npm_config_platform=neutral
npm_config_arch=neutral
npm_config_libc=neutral

# Пропускаем проверку платформы для Rollup
rollup-plugin-skip-platform-check=true
ROLLUP_SKIP_PLATFORM_CHECK=true

# Отключаем опциональные зависимости
optional=false

# Игнорируем ошибки при установке опциональных зависимостей
ignore-scripts=true
